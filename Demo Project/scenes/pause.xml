<Menu name="Pause">
	<Sprite name="Background" tilesheet="images/pause/pause.png" width="256" height="224" layer="3" />
	<Sprite name="BusterOff" tilesheet="images/pause/icon_off.png" width="16" height="16" layer="3" />
	<Sprite name="BusterOn" tilesheet="images/pause/icon_on.png" width="16" height="16" layer="3" />
	<Sprite name="RushCoilOff" tilesheet="images/pause/coil_off.png" width="16" height="16" layer="3" />
	<Sprite name="RushCoilOn" tilesheet="images/pause/coil_on.png" width="16" height="16" layer="3" />
	<Sprite name="RushJetOff" tilesheet="images/pause/jet_off.png" width="16" height="16" layer="3" />
	<Sprite name="RushJetOn" tilesheet="images/pause/jet_on.png" width="16" height="16" layer="3" />

	<Sprite name="EOn" tilesheet="images\pause\e_on.png" width="16" height="16" layer="3" />
	<Sprite name="EOff" tilesheet="images\pause\e_off.png" width="16" height="16" layer="3" />

	<Sprite name="Bolt" tilesheet="images\items\bolt_large.png" width="16" height="16" layer="3" />

	<Meter name="BusterMeter" x="48" y="40" image="images\meters\horizmeter_selected.png" background="images\meters\horizback_selected.png" orientation="horizontal">
		<Binding source="Health.Player" target="Value" />
	</Meter>
	<Meter name="BusterMeterOff" x="48" y="40" image="images\meters\horizmeter.png" background="images\meters\horizback.png" orientation="horizontal">
		<Binding source="Health.Player" target="Value" />
	</Meter>

	<Meter name="CoilMeter" x="160" y="104" image="images\meters\horizmeter_selected.png" background="images\meters\horizback_selected.png" orientation="horizontal">
		<Binding source="Weapon.RushCoil" target="Value" />
	</Meter>
	<Meter name="CoilMeterOff" x="160" y="104" image="images\meters\horizmeter.png" background="images\meters\horizback.png" orientation="horizontal">
		<Binding source="Weapon.RushCoil" target="Value" />
	</Meter>

	<Meter name="JetMeter" x="160" y="120" image="images\meters\horizmeter_selected.png" background="images\meters\horizback_selected.png" orientation="horizontal">
		<Binding source="Weapon.RushJet" target="Value" />
	</Meter>
	<Meter name="JetMeterOff" x="160" y="120" image="images\meters\horizmeter.png" background="images\meters\horizback.png" orientation="horizontal">
		<Binding source="Weapon.RushJet" target="Value" />
	</Meter>

	<State name="Start">
		<Sprite name="Background" object="Background" x="0" y="0" />

		<Sprite name="BusterOn" object="BusterOn" x="24" y="32" />
		<Text font="Pause" x="48" y="32" content="M.Buster" />
		<Add name="BusterMeter" object="BusterMeter" x="48" y="40" />

		<Sprite name="RushCoilOff" object="RushCoilOff" x="136" y="96" />
		<Text font="Pause" x="160" y="96" content="R.Coil" />
		<Add name="CoilMeterOff" object="CoilMeterOff" x="160" y="104" />

		<Sprite name="RushJetOff" object="RushJetOff" x="136" y="112" />
		<Text font="Pause" x="160" y="112" content="R.Jet" />
		<Add name="JetMeterOff" object="JetMeterOff" x="160" y="104" />

		<Sprite name="EOff" object="EOff" x="24" y="184" />
		<Text font="Pause" name="EnergyTanks" x="42" y="192">
			<Binding source="Inventory.EnergyTank" target="Content" />
		</Text>

		<Sprite name="Bolt" object="Bolt" x="92" y="188" />
		<Text font="Pause" name="Bolts" x="112" y="192">
			<Binding source="Inventory.Bolts" target="Content" />
		</Text>

		<Option x="24" y="32">
			<On>
				<Sound name="Menu" />
				<Remove name="BusterOff" />
				<Sprite name="BusterOn" object="BusterOn" x="24" y="32" />
				<Remove name="BusterMeterOff" />
				<Add name="BusterMeter" object="BusterMeter" x="48" y="40" />
			</On>
			<Off>
				<Remove name="BusterOn" />
				<Sprite name="BusterOff" object="BusterOff" x="24" y="32" />
				<Remove name="BusterMeter" />
				<Add name="BusterMeterOff" object="BusterMeterOff" x="48" y="40" />
			</Off>
			<Select>
				<Effect entity="Player">
					<Weapon><Change name="MBuster" /></Weapon>
				</Effect>
				<Sound name="pause" />
				<Next mode="Pop" fade="true" />
			</Select>
		</Option>

		<Option x="136" y="96">
			<On>
				<Sound name="Menu" />
				<Remove name="RushCoilOff" />
				<Sprite name="RushCoilOn" object="RushCoilOn" x="136" y="96" />
				<Remove name="CoilMeterOff" />
				<Add name="CoilMeter" object="CoilMeter" x="160" y="104" />
			</On>
			<Off>
				<Remove name="RushCoilOn" />
				<Sprite name="RushCoilOff" object="RushCoilOff" x="136" y="96" />
				<Remove name="CoilMeter" />
				<Add name="CoilMeterOff" object="CoilMeterOff" x="160" y="104" />
			</Off>
			<Select>
				<Effect entity="Player">
					<Weapon><Change name="RushCoil" /></Weapon>
				</Effect>
				<Sound name="pause" />
				<Next mode="Pop" fade="true" />
			</Select>
		</Option>

		<Option x="136" y="112">
			<On>
				<Sound name="Menu" />
				<Remove name="RushJetOff" />
				<Sprite name="RushJetOn" object="RushJetOn" x="136" y="112" />
				<Remove name="JetMeterOff" />
				<Add name="JetMeter" object="JetMeter" x="160" y="120" />
			</On>
			<Off>
				<Remove name="RushJetOn" />
				<Sprite name="RushJetOff" object="RushJetOff" x="136" y="112" />
				<Remove name="JetMeter" />
				<Add name="JetMeterOff" object="JetMeterOff" x="160" y="120" />
			</Off>
			<Select>
				<Effect entity="Player">
					<Weapon><Change name="RushJet" /></Weapon>
				</Effect>
				<Sound name="pause" />
				<Next mode="Pop" fade="true" />
			</Select>
		</Option>

		<Option x="32" y="186">
			<On>
				<Sound name="Menu" />
				<Remove name="EOff" />
				<Sprite name="EOn" object="EOn" x="24" y="184" />
			</On>
			<Off>
				<Sound name="Menu" />
				<Remove name="EOn" />
				<Sprite name="EOff" object="EOff" x="24" y="184" />
			</Off>
			<Select>
				<Call>UseE</Call>
			</Select>
		</Option>
	</State>
</Menu>